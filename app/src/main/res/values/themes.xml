<resources>
    <!-- Base application theme. -->
    <style name="Theme.ModernFileManagement" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Hide action bar. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Text attrs. -->
        <item name="android:textViewStyle">@style/MulishTextViewStyle</item>
        <item name="buttonStyle">@style/MulishTextViewStyle</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/blue_gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

    </style>
</resources>